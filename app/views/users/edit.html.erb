<form class="form-horizontal" method="post" action="/users/update">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<input type="hidden" name="_method" value="patch">
<fieldset>

<!-- Form Name -->
<legend>Edit Your Information</legend>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="user[first_name]">First Name:</label>  
  <div class="col-md-4">
  <input id="user[first_name]" name="user[first_name]" type="text" value="<%= @user.first_name %>" class="form-control input-md">
    
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="user[last_name]">Last Name:</label>  
  <div class="col-md-4">
  <input id="user[last_name]" name="user[last_name]" type="text" value="<%= @user.last_name %>" class="form-control input-md">
    
  </div>
</div>
<h5> Add an Image for your profile! </h5>
<div class="form-group row">
  <label class="col-sm-4 col-form-label" for="user[image]">Add an Image</label>  
  <div class="col-sm-10">
  <input class="form-control" id="user[image]" name="user[image]" type="file" placeholder="" class="form-control input-md" required="">
    
  </div>

<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for=""></label>
  <div class="col-md-4">
    <input type="submit" class="btn btn-primary" value="Update Info!">
  </div>
</div>


</fieldset>
</form>
<a href="/users/dashboard">User Dashboard</a>
<a href="/messages/view">My Messages</a>
<a href="/users/logout">Logout</a>