<div id="EditGameDiv">
<h4>Edit Your Game</h4>
<form action="/games/update" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="patch">    
    <label for="team1">Home Team:</label>
    <select name="game[home_id]" id="hometeamID" value="<%= @team1.name %>">
    <% @teams.each do |team| %>
        <option value="<%= team.id %>"><%= team.name %></option>
    <% end %>
    </select><br>
    <label for="team2">Away Team:</label>
    <select name="game[away_id]" id="hometeamID" value="<%= @team2.name %>">
    <% @teams.each do |team| %>
        <option value="<%= team.id %>"><%= team.name %></option>
    <% end %>
    </select><br>
    <label for="date">Date:</label>
    <input type="date" name="game[date]" id="date" value="<%= @game.date %>"><br>
    <label for="details">Details (time and location):</label>
    <input type="text" name="game[details]" id="details" value="<%= @game.details %>"><br>
    <input type="submit" value="Create Game">
</form>
<form class="form-horizontal" action="games/<%= @game.id %>/update" method="post">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<input type="hidden" name="_method" value="patch">
<fieldset>

<!-- Form Name -->
<legend>Edit a Game</legend>

<!-- Select Basic -->
<div class="form-group">
  <label class="col-md-4 control-label" for="game[home_id]">Home Team</label>
  <div class="col-md-4">
    <select id="game[home_id]" name="game[home_id]" class="form-control" value="<%= @team1.name %>">
    <% @teams.each do |team| %>
        <option value="<%= team.id %>"><%= team.name %></option>
    <% end %>
    </select>
  </div>
</div>

<!-- Select Basic -->
<div class="form-group">
  <label class="col-md-4 control-label" for="game[away_id]">Away Team</label>
  <div class="col-md-4">
    <select id="game[away_id]" name="game[away_id]" class="form-control" value="<%= @team2.name %>">
    <% @teams.each do |team| %>
        <option value="<%= team.id %>"><%= team.name %></option>
    <% end %>
    </select>
  </div>
</div>
<div class="form-group">
    <label class="col-md-4 control-label" for="game[date]">Date:</label>
    <div class="col-md-4">
        <input type="date" name="game[date]" id="date" value="<%= @game.date %>">
    </div>
</div>
<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="game[details]">Details (Time/Place)</label>  
  <div class="col-md-4">
  <input id="game[details]" name="game[details]" type="text" placeholder="<%= @game.details %>" class="form-control input-md">
    
  </div>
</div>

<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for="submit"></label>
  <div class="col-md-4">
    <button id="submit" name="submit" class="btn btn-primary">Create Game!</button>
  </div>
</div>

</fieldset>
</form>
