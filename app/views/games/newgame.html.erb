<form class="form-horizontal" action="/games/create" method="post">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

<fieldset>

<!-- Form Name -->
<legend class="text-center">Create a Game</legend>

<!-- Select Basic -->
<div class="form-group">
  <label class="col-md-4 control-label" for="game[home_id]">Home Team</label>
  <div class="col-md-4">
    <select id="game[home_id]" name="game[home_id]" class="form-control">
    <% @teams.each do |team| %>
        <option value="<%= team.id %>"><%= team.name %></option>
    <% end %>
    </select>
  </div>
</div>

<!-- Select Basic -->
<div class="form-group">
  <label class="col-md-4 control-label" for="game[away_id]">Away Team</label>
  <div class="col-md-4">
    <select id="game[away_id]" name="game[away_id]" class="form-control">
    <% @teams.each do |team| %>
        <option value="<%= team.id %>"><%= team.name %></option>
    <% end %>
    </select>
  </div>
</div>
<div class="form-group">
    <label class="col-md-4 control-label" for="game[date]">Date:</label>
    <div class="col-md-4">
        <input type="date" name="game[date]" id="date">
    </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="game[details]">Details (Time/Place)</label>  
  <div class="col-md-4">
  <input id="game[details]" name="game[details]" type="text" placeholder="" class="form-control input-md">
    
  </div>
</div>

<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for="submit"></label>
  <div class="col-md-4">
    <input type="submit" value="Create Game!"class="btn btn-primary">
  </div>
</div>

</fieldset>
</form>
<a href="/users/dashboard">User Dashboard</a>
<a href="/messages/view">My Messages</a>
<a href="/users/logout">Logout</a>

