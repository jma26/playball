<h1>My Messages</h1>
<a href="/users/dashboard">Back to Dashboard</a>
<a href="/users/logout">Logout</a>
<div id="receivedMessages">
<h3 class="text-left">Received Messages</h3>
    <table class="table table-bordered table-striped">
        <div class="row">
        <tr>
            <div class="col-sm-8"><th>user</th></div>
            <div class="col-sm-8"><th>message</th></div>
        </tr>
        </div>
        <% @received_messages.each do |message| %>
        
        <tr>
            <div class="col-md"><td><%= message.sender.first_name %></td></div>
            <div class="col-md"><td><%= message.content %></td></div>
        </tr>
        <% end %>
    </table>
<h3>Sent Messages </h3>
    <table class="table table-striped table-bordered">
        <tr>
            <th>user</th>
            <th>message</th>
        </tr>
    
        <% @sent_messages.each do |message| %>
        <tr>
            <td><%= message.recipient.first_name %></td>
            <td><%= message.content %></td>
        </tr>
        <% end %>
    </table>
</div>
        <a href="/users/dashboard">User Dashboard</a>
        <a href="/users/logout">Logout</a>
